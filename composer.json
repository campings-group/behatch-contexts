{
    "name": "campings-group/behatch-contexts",
    "description": "Behatch contexts",
    "keywords": ["BDD", "Behat", "Symfony2", "Context"],
    "type": "library",
    "license": "beerware",

    "require": {
        "php": ">=8.1",
        "behat/behat": "^3.0",
        "friends-of-behat/mink-extension": "^2.3.1",
        "justinrainbow/json-schema": "^5.3 || ^6.0",
        "symfony/property-access": "^7.0 || ^8.0",
        "symfony/http-foundation": "^7.0 || ^8.0",
        "symfony/dom-crawler": "^7.0 || ^8.0"
    },

    "require-dev": {
        "behat/mink-goutte-driver": "^1.2 || ^2.0",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "behat/mink-selenium2-driver": "^1.4@dev",
        "atoum/atoum": "^2.8 || ^3.0 || ^4.0",
        "fabpot/goutte": "^3.3 || ^4.0"
    },

    "autoload": {
        "psr-4": {
            "Behatch\\": "src/"
        }
    },

    "config": {
        "bin-dir": "bin/"
    },

    "replace": {
        "sanpi/behatch-contexts": "self.version"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
